{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "mocha": true
  },

  "plugins": [ "react" ],
  "extends": [ "standard", "standard-react" ],

  "rules": {
    "comma-dangle": [ "off" ],
    "jsx-quotes": ["error", "prefer-double"],

    "react/prop-types": [ "error" ]
  }
}
