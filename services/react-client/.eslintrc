{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },

    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "mocha": true
    },

    "plugins": [ "react" ],
    "extends": [ "standard", "standard-react" ],

    "rules": {
      "comma-dangle": [ "off" ],
      "react/prop-types": "error"
    }
  }
}
