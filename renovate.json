{
  "enabled": true,
  "timezone": "America/Toronto",
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "paths": [ "docker/*" ],
      "groupName": "docker images"
    },
    {
      "paths": [ "charts/*" ],
      "groupName": "helm charts"
    },
    {
      "paths": [ "services/asset/*" ],
      "groupName": "asset service"
    },
    {
      "paths": [ "services/client/*" ],
      "groupName": "client service"
    },
    {
      "paths": [ "services/graphql/*" ],
      "groupName": "graphql service"
    },
    {
      "paths": [ "services/sensor/*" ],
      "groupName": "sensor service"
    },
    {
      "paths": [ "services/site/*" ],
      "groupName": "site service"
    },
    {
      "paths": [ "services/switch/*" ],
      "groupName": "switch service"
    }
  ]
}
